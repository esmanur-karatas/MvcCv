@using CV.Web.Models.Entity @*veri tabanını çağırdık entity içindeki*@
@model List<TblExperiences>
<div class="resume-section-content">
    <h2 class="mb-5">Deneyimlerim</h2>
    @foreach (var x in Model)
    {
    <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
        <div class="flex-grow-1">
            <h3 class="mb-0">@x.Title</h3>
            <div class="subheading mb-3">@x.Subtitle</div>
            <p>@x.Description</p>
        </div>
        <div class="flex-shrink-0"><span class="text-primary">@x.Date</span></div>
    </div>
    }
</div>
